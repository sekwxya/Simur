@model IEnumerable<TourAgency.Models.Tour>

@{
    ViewData["Title"] = "Справочник туров";
}

<div class="container mt-4">
    <!-- Заголовок страницы -->
    <h1 class="mb-4">Справочник туров</h1>


    <!-- Навигационные вкладки -->
    <ul class="nav nav-tabs mb-3" id="tourTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <a class="nav-link active text-primary fw-bold" asp-controller="Tours" asp-action="Index">
                <i class="bi bi-globe"></i> Туры
            </a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" asp-controller="Discounts" asp-action="Index">
                <i class="bi bi-tags"></i> Скидки
            </a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" asp-controller="TourRequest" asp-action="Index">
                <i class="bi bi-search"></i> Запросы на подбор тура
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Statistics" asp-action="Index">
                <i class="bi bi-bar-chart-line"></i> Статистика
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Balances" asp-action="Index">
                <i class="bi bi-wallet2"></i> Баланс
            </a>
        </li>
        <li class="nav-item ms-auto" role="presentation">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Добавить новый тур
            </a>
        </li>
    </ul>

    <!-- Таблица туров -->
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle shadow-sm">
            <thead class="table-dark text-center">
                <tr>
                    <th>Название</th>
                    <th>Описание</th>
                    <th>Страна</th>
                    <th>Цена</th>
                    <th>Дата начала</th>
                    <th>Дата окончания</th>
                    <th>Скидка</th>
                    <th>Цена со скидкой</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold">@Html.DisplayFor(modelItem => item.Title)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>@Html.DisplayFor(modelItem => item.Country)</td>
                        <td class="text-end text-primary" style="white-space: nowrap;">
                            @($"{item.Price:C}")
                        </td>
                        <td class="text-center">@item.StartDate.ToShortDateString()</td>
                        <td class="text-center">@item.EndDate.ToShortDateString()</td>
                        <td class="text-center text-success">@Html.DisplayFor(modelItem => item.Discount.Name)</td>
                        <td class="text-end text-danger fw-bold" style="white-space: nowrap;">
                            @($"{item.DiscountedPrice:C}")
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.TourId" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-pencil"></i> Редактировать
                            </a>
                            <a asp-action="Details" asp-route-id="@item.TourId" class="btn btn-outline-info btn-sm">
                                <i class="bi bi-eye"></i> Подробнее
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.TourId" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-trash"></i> Удалить
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
