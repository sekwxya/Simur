@model IEnumerable<TourAgency.Models.TourHistory>

@{
    ViewData["Title"] = "История покупок";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">История ваших покупок</h2>

    @if (Model.Any())
    {
        <table class="table table-striped table-bordered text-center">
            <thead class="thead-dark">
                <tr>
                    <th>Название тура</th>
                    <th>Цена</th>
                    <th>Статус</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var history in Model)
                {
                    <tr>
                        <td>@history.Tour.Title</td>
                        <td>@history.Tour.Price.ToString("C")</td>
                        <td>
                            @if (history.Status == "Успешно")
                            {
                                <span class="text-success">@history.Status</span>
                            }
                            else
                            {
                                <span class="text-danger">@history.Status</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            У вас еще нет истории покупок.
        </div>
    }
</div>
