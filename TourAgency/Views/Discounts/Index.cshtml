@model IEnumerable<TourAgency.Models.Discount>

@{
    ViewData["Title"] = "Скидки";
}

<h1 class="mb-4">Справочник скидок</h1>

<!-- Навигационные вкладки -->
<ul class="nav nav-tabs mb-4" id="tourTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link" asp-controller="Tours" asp-action="Index" aria-selected="false">Туры</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link active" asp-controller="Discounts" asp-action="Index">Скидки</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" asp-controller="TourRequest" asp-action="Index">Запросы на подбор тура</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-controller="Statistics" asp-action="Index">Статистика</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-controller="Balances" asp-action="Index">Баланс</a>
    </li>
    <li class="nav-item ms-auto" role="presentation">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Добавить скидку
        </a>
    </li>
</ul>

<!-- Таблица скидок -->
<table class="table table-striped table-hover align-middle shadow-sm">
    <thead class="table-dark text-center">
        <tr>
            <th>Имя</th>
            <th>Процент скидки</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="fw-bold text-primary">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="text-center text-success fw-bold" style="white-space: nowrap;">
                    @item.DiscountPercentage.ToString("0.##")%
                </td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.DiscountId" class="btn btn-outline-primary btn-sm me-1">
                        <i class="bi bi-pencil"></i> Редактировать
                    </a>
                    <a asp-action="Details" asp-route-id="@item.DiscountId" class="btn btn-outline-info btn-sm me-1">
                        <i class="bi bi-eye"></i> Подробнее
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.DiscountId" class="btn btn-outline-danger btn-sm">
                        <i class="bi bi-trash"></i> Удалить
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
