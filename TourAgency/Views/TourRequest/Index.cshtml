@model IEnumerable<TourAgency.Models.TourRequest>

@{
    ViewData["Title"] = "Заявки на подбор тура";
}

<h1 class="mb-4">Заявки на подбор тура</h1>

<!-- Навигационные вкладки -->
<ul class="nav nav-tabs mb-4" id="tourTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link" asp-controller="Tours" asp-action="Index" aria-selected="false">Туры</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" asp-controller="Discounts" asp-action="Index">Скидки</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link active" asp-controller="TourRequest" asp-action="Index">Запросы на подбор тура</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-controller="Statistics" asp-action="Index">Статистика</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-controller="Balances" asp-action="Index">Баланс</a>
    </li>
    <li class="nav-item ms-auto" role="presentation">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Добавить заявку
        </a>
    </li>
</ul>

<!-- Таблица заявок на подбор тура -->
<table class="table table-striped table-hover align-middle shadow-sm">
    <thead class="table-dark text-center">
        <tr>
            <th>Id</th>
            <th>Пользователь</th>
            <th>Статус</th>
            <th>Предпочтения</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="fw-bold text-primary text-center">
                    @item.TourRequestId
                </td>
                <td class="text-center">
                    @item.User.FullName
                </td>
                <td class="text-center">
                    @item.Status
                </td>
                <td class="text-center">
                    @item.Preferences
                </td>
                <td class="text-center">
                    <a asp-action="Details" asp-route-id="@item.TourRequestId" class="btn btn-outline-info btn-sm me-1">
                        <i class="bi bi-eye"></i> Подробнее
                    </a>
                    <!-- Здесь можно добавить другие действия, например, изменение статуса -->
                </td>
            </tr>
        }
    </tbody>
</table>
