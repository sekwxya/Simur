@model IEnumerable<TourAgency.Models.User>

<h1>Список пользователей</h1>

<ul class="nav nav-tabs" id="tourTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link" asp-controller="Tours" asp-action="Index" aria-selected="false">Туры</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" asp-controller="Discounts" asp-action="Index">Скидки</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" asp-controller="TourRequest" asp-action="Index">Запросы на подбор тура</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-controller="Statistics" asp-action="Index">Статистика</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" asp-controller="Balances" asp-action="Index">Баланс</a>
    </li>
</ul>

<table class="table">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Email</th>
            <th>Баланс</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.Balance</td>
                <td>
                    <a asp-controller="Balances" asp-action="Add" asp-route-id="@user.UserId" class="btn btn-primary">Добавить баланс</a>
                </td>
            </tr>
        }
    </tbody>
</table>
