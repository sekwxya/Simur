@model IEnumerable<TourAgency.Models.User>

@{
    ViewData["Title"] = "Список пользователей";
}

<h1 class="mb-4">Список пользователей</h1>

<!-- Навигационные вкладки -->
<ul class="nav nav-tabs mb-4" id="tourTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link" asp-controller="Tours" asp-action="Index" aria-selected="false">Туры</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" asp-controller="Discounts" asp-action="Index">Скидки</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" asp-controller="TourRequest" asp-action="Index">Запросы на подбор тура</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" asp-controller="Statistics" asp-action="Index">Статистика</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link active" asp-controller="Balances" asp-action="Index">Баланс</a>
    </li>
</ul>

<!-- Таблица пользователей -->
<table class="table table-striped table-hover align-middle shadow-sm">
    <thead class="table-dark text-center">
        <tr>
            <th>Имя</th>
            <th>Email</th>
            <th>Баланс (₽)</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td class="text-primary fw-bold">@user.FullName</td>
                <td>@user.Email</td>
                <td class="text-center">@user.Balance.ToString("C", new System.Globalization.CultureInfo("ru-RU"))</td>
                <td class="text-center">
                    <a asp-controller="Balances" asp-action="Add" asp-route-id="@user.UserId"
                       class="btn btn-success btn-sm">
                        <i class="bi bi-plus-circle"></i> Добавить баланс
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
