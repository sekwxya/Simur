@model IEnumerable<TourAgency.Models.Review>

@{
    ViewData["Title"] = $"Отзывы о туре {ViewData["TourName"]}";
}

<h1>Отзывы о туре: @ViewData["TourName"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Комментарий</th>
            <th>Оценка</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var review in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => review.Comment)</td>
                <td>@Html.DisplayFor(modelItem => review.Rating)</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@review.ReviewId" method="post" onsubmit="return confirm('Вы уверены, что хотите удалить этот отзыв?');">
                        <button type="submit" class="btn btn-danger">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Tours" asp-action="Index" class="btn btn-secondary mt-3">Назад к списку туров</a>
