@model TourAgency.Models.Review

<h2>Редактировать отзыв</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" name="ReviewId" value="@Model.ReviewId" />
    <div class="form-group">
        <label for="Comment">Комментарий</label>
        <textarea id="Comment" name="Comment" class="form-control" required>@Model.Comment</textarea>
    </div>
    <div class="form-group">
        <label for="Rating">Рейтинг</label>
        <input type="number" id="Rating" name="Rating" class="form-control" value="@Model.Rating" min="1" max="5" required />
    </div>
    <button type="submit" class="btn btn-success">Сохранить</button>
</form>
