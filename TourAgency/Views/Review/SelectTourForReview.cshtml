@model IEnumerable<TourAgency.Models.Tour>

<h2>Выберите тур для отзыва</h2>
<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Описание</th>
            <th>Цена</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tour in Model)
        {
            <tr>
                <td>@tour.Title</td>
                <td>@tour.Description</td>
                <td>@tour.DiscountedPrice.ToString("C")</td>
                <td>
                    <a asp-action="Add" asp-route-tourId="@tour.TourId" class="btn btn-success">Добавить отзыв</a>
                </td>
            </tr>
        }
    </tbody>
</table>
